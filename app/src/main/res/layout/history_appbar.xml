<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/histbartitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/historybartext"
        android:textSize="23sp"
        android:textColor="?attr/calcTextDefaultColor"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/histdelbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        style="@style/PinButton"
        app:icon="@drawable/round_clear_all_24"
        app:iconTint="?attr/dangerColor"
        app:iconSize="24dp"
        android:backgroundTint="?attr/altButtonBgColor"
        app:iconGravity="textStart"
        android:layout_gravity="end"
        app:rippleColor="?attr/altRippleColor"
        android:clickable="true"
        android:focusable="true"
        />

</com.google.android.material.appbar.MaterialToolbar>