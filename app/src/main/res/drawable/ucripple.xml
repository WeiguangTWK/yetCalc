<!-- res/drawable/start_icon_clickable.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state (no click) -->
    <item android:state_pressed="false" android:drawable="@drawable/ic_content_copy_24" />

    <!-- Pressed state (when clicked) -->
    <item android:state_pressed="true">
        <ripple android:color="?attr/colorControlHighlight">
            <item android:drawable="@drawable/ic_content_copy_24" />
        </ripple>
    </item>
</selector>
