<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thumb color when checked and enabled -->
    <item android:state_checked="true" android:state_enabled="true" android:color="?attr/calcTextDefaultColor" />
    <!-- Thumb color when unchecked and enabled -->
    <item android:state_checked="false" android:state_enabled="true" android:color="?attr/textResultColor" />
    <!-- Thumb color when disabled (whether checked or not) -->
    <item android:state_enabled="false" android:color="?attr/textResultColor" />
</selector>
