<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track color when checked and enabled -->
    <item android:state_checked="true" android:state_enabled="true" android:color="?attr/calcButtonClickedColor" />
    <!-- Track color when unchecked and enabled -->
    <item android:state_checked="false" android:state_enabled="true" android:color="?attr/calcBackgroundDefault" />
    <!-- Track color when disabled -->
    <item android:state_enabled="false" android:color="?attr/calcBackgroundDefault" />
</selector>
